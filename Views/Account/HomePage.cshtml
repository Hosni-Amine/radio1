@model dynamic

@{
	Layout = "_HomePageLayout";
}

<div class="page-wrapper">
	<div class="content">
		@if (Model.Doctor != null)
		{
			<div class="row">
				<div class="col-lg-12">
					<div class="doctor-personals-grp">
						<div class="card">
							<div class="card-body">
								<div class="tab-content-set">
									<ul class="nav">
										<li>
											<a href="#" class="active"><span class="set-about-icon me-2"><img src="~/assets/img/icons/menu-icon-02.svg" alt=""></span>Données Personel</a>
										</li>
									</ul>
								</div>
								<div class="personal-list-out">
									<div class="row" style="margin: 19px 0px;">
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Nom</h2>
												<h3 id="">@Model.Doctor.Nom</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Prenom</h2>
												<h3 id="">@Model.Doctor.Prenom</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Matricule</h2>
												<h3 id="">@Model.Doctor.Matricule</h3>
											</div>
										</div>
									</div>
									<div class="row" style="margin: 19px 0px;">
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Telephone</h2>
												<h3 id="">@Model.Doctor.Telephone</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Email</h2>
												<h3 id="">@Model.Doctor.Email</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Sexe</h2>
												<h3 id="">@Model.Doctor.Sexe</h3>
											</div>
										</div>
									</div>
									<div class="row" style="margin: 19px 0px;">						
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Date de naissance</h2>
												<h3 id="">@Model.Doctor.DateN</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Lieux de naissance</h2>
												<h3 id="">@Model.Doctor.LieuN</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Situation Conjugale</h2>
												<h3 id="">@Model.Doctor.SituationC</h3>
											</div>
										</div>
									</div>
									<div class="row" style="margin: 19px 0px;">
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Ville</h2>
												<h3 id="">@Model.Doctor.Ville @Model.Doctor.Adresse</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Code Postal</h2>
												<h3 id="">@Model.Doctor.CodePostal</h3>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
		else if (@Model.Technicien != null)
		{
			<div class="row">
				<div class="col-lg-12">
					<div class="doctor-personals-grp">
						<div class="card">
							<div class="card-body">
								<div class="tab-content-set">
									<ul class="nav">
										<li>
											<a href="#" class="active"><span class="set-about-icon me-2"><img src="~/assets/img/icons/menu-icon-08.svg" alt=""></span>Données Personel</a>
										</li>
									</ul>
								</div>
								<div class="personal-list-out">
									<div class="row" style="margin: 19px 0px;">
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Nom</h2>
												<h3 id="">@Model.Technicien.Nom</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Prenom</h2>
												<h3 id="">@Model.Technicien.Prenom</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Sexe</h2>
												<h3 id="">@Model.Technicien.Sexe</h3>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
		else if (@Model.Secretaire != null)
		{
			<div class="row">
				<div class="col-lg-12">
					<div class="doctor-personals-grp">
						<div class="card">
							<div class="card-body">
								<div class="tab-content-set">
									<ul class="nav">
										<li>
											<a href="#" class="active"><span class="set-about-icon me-2"><img src="~/assets/img/icons/menu-icon-08.svg" alt=""></span>Données Personel</a>
										</li>
									</ul>
								</div>
								<div class="personal-list-out">
									<div class="row" style="margin: 19px 0px;">
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Nom</h2>
												<h3 id="">@Model.Secretaire.Nom</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Prenom</h2>
												<h3 id="">@Model.Secretaire.Prenom</h3>
											</div>
										</div>
										<div class="col-xl-4 col-md-4">
											<div class="detail-personal">
												<h2>Sexe</h2>
												<h3 id="">@Model.Secretaire.Sexe</h3>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
		else if (Model.Admin != null)
		{
			<div class="row">
				<div class="col-12">
					<div class="struct-point">
						<div class="card patient-structure" style="background-color: #e4e8ee;">
							<div class="card-body">
								<h5>Ajouter un compte Admin :</h5>
								<div class="doctor-submit text-center">
									<button type="button" style="background-color: #2e6abeb3;" class="btn btn-primary submit-form me-2" onclick="add_admin_btn()">Ajouter un Compte (Role Admin)</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12 col-md-6 col-lg-6 col-xl-6 d-flex">
					<div class="struct-point">
						<div class="card patient-structure" style="background-color: #e4e8ee;">
							<div class="card-body">
								<h5>Nombre des Medecins en service :</h5>
								<h3 id="med_count"></h3>
								<div class="doctor-submit text-right">
									<button type="button" style="background-color: #2e6abeb3;" class="btn btn-primary submit-form me-2" onclick="add_duser_btn()">Ajouter un Compte (Role Médecin)</button>
								</div>
							</div>
						</div>
						<div class="card patient-structure"  style="background-color: #e4e8ee;">
							<div class="card-body">
								<h5>Nombre des Techniciens en service :</h5>
								<h3 id="tech_count"></h3>
								<div class="doctor-submit text-right">
									<button type="button" style="background-color: #2e6abeb3;" class="btn btn-primary submit-form me-2" onclick="add_tuser_btn()">Ajouter un Compte (Role Technicien)</button>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-12 col-md-6 col-lg-6 col-xl-6 d-flex">
					<div class="struct-point">
						<div class="card patient-structure" style="background-color: #e4e8ee;">
							<div class="card-body">
								<h5>Nombre des Sécretaires en service :</h5>
								<h3 id="secretaire_count"></h3>
								<div class="doctor-submit text-right">
									<button type="button" style="background-color: #2e6abeb3;" class="btn btn-primary submit-form me-2" onclick="add_suser_btn()">Ajouter un Compte (Role Secretaire)</button>
								</div>
							</div>
						</div>
						<div class="card patient-structure" style="background-color: #e4e8ee;">
							<div class="card-body">
								<h5>Nombre de patients enregistrées :</h5>
								<h3 id="patient_count"></h3>
								<div class="doctor-submit text-right">
									<button type="button" style="background-color: #2e6abeb3;" class="btn btn-primary submit-form me-2" >Pas disponible pour le moment !</button>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-12 col-md-12 col-lg-12 col-xl-12 d-flex">
					<div class="struct-point">
						<div class="card patient-structure" style="background-color: #e4e8ee;">
							<div class="card-body">
								<h5>Nombre des Salles en Service :</h5>
								<h3 id="salle_count"></h3>
							</div>
						</div>
						<div class="card patient-structure" style="background-color: #e4e8ee;">
							<div class="card-body">
								<h5>Nombre des Appareils en Service :</h5>
								<h3 id="app_count"></h3>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>


